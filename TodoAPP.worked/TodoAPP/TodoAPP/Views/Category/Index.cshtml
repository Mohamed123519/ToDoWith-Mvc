@model List<Category>

<a class="btn btn-primary" asp-action="NewCategory" asp-controller="Category">Create New Category</a>
@if (Model.Count() == 0)
{
    <h1>There Are No Categories !</h1>
}
else
{
    <table class="table table-striped w-75 mx-auto" >
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <th scope="row">@c.Id</th>
                    <td>@c.Name</td>
                    <td>
                        <a asp-action="UpdateCategory" asp-controller="Category" asp-route-id="@c.Id" class="mx-2">
                            <img src="~/images/edit.png" />
                        </a>
                        <a asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@c.Id" class="mx-2">
							<img src="~/images/remove.png" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}